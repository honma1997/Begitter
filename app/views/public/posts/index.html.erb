<%# 投稿一覧ページ %>
<div class="container">
  <h1>投稿一覧</h1>
  
<div class="search-form mb-4">
  <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.text_field :keyword, value: @keyword, class: "form-control", placeholder: "キーワードで検索" %>
      </div>
      
      <div class="col-md-4">
        <% if @tags.present? %>
          <%= f.select :tag_ids, 
                      @tags.map{ |tag| [tag.name, tag.id] }, 
                      { include_blank: "タグを選択", selected: @selected_tag_ids },
                      { class: "form-select" } %>
        <% end %>
      </div>
      
      <div class="col-md-2">
        <%= f.submit "検索", class: "btn btn-primary w-100" %>
      </div>
    </div>
  <% end %>
</div>

  <%# 検索結果があれば表示 %>
  <% if @keyword.present? || @selected_tag_ids.present? %>
    <div class="search-result mb-3">
      <% if @posts.present? %>
        <p>
          <% if @keyword.present? %>
            <span class="fw-bold"><%= @keyword %></span>
          <% end %>
          <% if @selected_tag_ids.present? %>
            <% selected_tags = Tag.where(id: @selected_tag_ids) %>
            <% selected_tags.each do |tag| %>
              <span class="badge bg-secondary"><%= tag.name %></span>
            <% end %>
          <% end %>
          の検索結果: <%= @posts.total_count %>件
        </p>
        <div class="search-actions mb-3">
          <%= link_to posts_path, class: "btn btn-sm btn-secondary" do %>
            <i class="fas fa-arrow-left"></i> 全ての投稿に戻る
          <% end %>
        </div>
      <% else %>
        <p>
          <% if @keyword.present? %>
            <span class="fw-bold"><%= @keyword %></span>
          <% end %>
          <% if @selected_tag_ids.present? %>
            <% selected_tags = Tag.where(id: @selected_tag_ids) %>
            <% selected_tags.each do |tag| %>
              <span class="badge bg-secondary"><%= tag.name %></span>
            <% end %>
          <% end %>
          に一致する投稿は見つかりませんでした。
        </p>
        <div class="search-actions mb-3">
          <%= link_to posts_path, class: "btn btn-sm btn-secondary" do %>
            <i class="fas fa-arrow-left"></i> 全ての投稿に戻る
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <%# ログイン済みユーザーのみ新規投稿ボタンを表示 %>
  <% if user_signed_in? %>
    <div class="mb-3">
      <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <%# 投稿一覧表示部分 %>
  <div class="posts-container">
    <% if @posts.present? %>
      <%# 投稿がある場合、カード形式で表示 %>
      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="card-body">
            <%# 投稿タイトル（詳細へのリンク） %>
            <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
            
            <%# 投稿者情報 %>
            <h6 class="card-subtitle mb-2 text-muted">
              <%= post.user.name %> さん
              <span class="ms-2 badge bg-info text-white"><%= post.user.phase_in_japanese %></span>
            </h6>
            
            <%# 投稿本文（100文字で切り詰め） %>
            <p class="card-text"><%= truncate(post.body, length: 100) %></p>
            
            <%# タグ一覧 %>
            <div class="post-tags mb-2">
              <% post.tags.each do |tag| %>
                <span class="badge bg-secondary"><%= tag.name %></span>
              <% end %>
            </div>
            
            <%# 投稿画像（存在する場合のみ表示） %>
            <% if post.image.attached? %>
              <div class="post-image mb-4">
                <%= image_tag post.image, class: "img-fluid rounded", style: "max-width: 30%;" %>
              </div>
            <% end %>
            
            <%# 投稿日時 %>
            <div class="card-text mt-2">
              <small class="text-muted">投稿日: <%= post.created_at.strftime('%Y/%m/%d %H:%M') %></small>
              <small class="text-muted">編集日: <%= post.updated_at.strftime('%Y/%m/%d %H:%M') %></small>
            </div>
          </div>
        </div>
      <% end %>
      
      <%# ページネーションの表示 %>
      <div class="pagination-container d-flex justify-content-center">
        <%= paginate @posts %>
      </div>
    <% else %>
      <%# 投稿がない場合のメッセージ %>
      <div class="alert alert-info">
        <p class="mb-0">投稿がありません。最初の投稿をしてみましょう！</p>
      </div>
    <% end %>
  </div>
</div>