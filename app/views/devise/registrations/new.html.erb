<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
          <h2 class="mb-0 fs-4">新規アカウント登録</h2>
        </div>

        <div class="card-body p-4">
          <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :name, "ユーザー名", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "あなたの名前" %>
              </div>
              <div class="form-text">他のユーザーに表示される名前です</div>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "example@email.com" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :phase, "学習フェーズ", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-graduation-cap"></i></span>
                <%= f.select :phase, [
                  ['基礎学習中', 'basic_learning'],
                  ['応用学習中', 'advanced_learning'],
                  ['個人開発中', 'personal_dev'],
                  ['就職活動中', 'job_hunting'],
                  ['就職済み', 'employed']
                ], {}, { class: "form-select" } %>
              </div>
              <div class="form-text">あなたの現在の学習段階を選択してください</div>
            </div>

            <div class="mb-3">
              <%= f.label :github_username, "GitHubユーザー名（任意）", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fab fa-github"></i></span>
                <%= f.text_field :github_username, class: "form-control", placeholder: "GitHubのユーザー名" %>
              </div>
              <div class="form-text">GitHubのユーザー名を入力すると、プロフィールにGitHubアカウントへのリンクが表示されます</div>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上の英数字" %>
              </div>
              <% if @minimum_password_length %>
                <div class="form-text"><%= @minimum_password_length %> 文字以上の英数字を入力してください</div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, "パスワード (確認)", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "同じパスワードを入力" %>
              </div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "アカウント登録", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="mt-4 text-center">
            <p>すでにアカウントをお持ちですか？</p>
            <%= link_to "ログインする", new_session_path(resource_name), class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>