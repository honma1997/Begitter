<div class="text-center mt-3">
  <%- if controller_name != 'sessions' %>
    <div class="mb-2">すでにアカウントをお持ちの方は</div>
    <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-outline-secondary" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="mb-2 mt-3">アカウントをお持ちでない方は</div>
    <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="mt-3">
      <small><%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "text-decoration-none" %></small>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="mt-2">
      <small><%= link_to "確認メールが届きませんか？", new_confirmation_path(resource_name), class: "text-decoration-none" %></small>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="mt-2">
      <small><%= link_to "アカウントロック解除の方法", new_unlock_path(resource_name), class: "text-decoration-none" %></small>
    </div>
  <% end %>
</div>