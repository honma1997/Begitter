<h2>管理者ログイン</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, autofocus: true %>
    <%= f.input :password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "ログイン" %>
  </div>
<% end %>